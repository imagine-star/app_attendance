<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jigong.app_attendance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".mainpublic.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App_attendance"
        android:usesCleartextTraffic="true">
        <service
            android:name=".LongMingGongService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".mainpublic.SelectPlatformActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".hunan.HuNanService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".mainpublic.BaseService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".foshan.FoShanService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".mainpublic.InfoManageActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".mainpublic.BaseActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".mainpublic.MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".mainpublic.ShowNoInfoWorkerActivity" />
        <activity android:name=".mainpublic.ShowLogActivity" />

        <service android:name="org.eclipse.paho.android.service.MqttService" />
    </application>

</manifest>